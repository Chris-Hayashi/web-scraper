<div id="sports">

    <br><br>

    {{#each sports}}

      {{#if saved}}
      <center>
        <div class="eachCard">
          <div class="card w-75">
          <div class="card-body">
            <p class="card-text"><a href={{this.link}} style="color: inherit; text-docration: none;">{{this.title}}</a></p>
            <button type="button" class="btn btn-primary addNote" data-toggle="modal" data-target="#noteModal" value={{this._id}}>
              Add Note
            </button>
          </div>
        </div>
      </center>
      {{/if}}

    {{/each}}

</div>

{{!-- Modal --}}
  <div class="modal" id="noteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Notes For Article: <span id="articleId"></span></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="newNote" class="col-form-label">New Note:</label>
              <textarea class="form-control" id="newNote"></textarea>
            </div>
          </form>

          <hr>

          <label for="popNotes" class="col-form-label">Saved Notes:</label>
          <div id="popNotes">

          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="saveNote">Save Note</button>
        </div>
      </div>
    </div>
  </div>